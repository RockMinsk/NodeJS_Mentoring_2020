                        "schema": {
                            "type": "string",
                            "example": "localhost:3000/api/users?loginSubstring=Dave"
                        },
                        "description": "Get auto-suggest list sorted by login property and filtered by loginSubstring in the login property"
                    }, {
                        "in": "query",
                        "name": "limit",   
                        "schema": {
                            "type": "integer",  
                            "example": "localhost:3000/api/users?limit=2"
                        },
                        "description": "Get auto-suggest list from limit users sorted by login property"
