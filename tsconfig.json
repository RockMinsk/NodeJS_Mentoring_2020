{
    "compilerOptions": {
        "baseUrl": "./src",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "outDir": "./dist",
        "paths": {
            "*": [
                "node_modules/*",
            ]
        },
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2018",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2020"
        ]
    },
    "include":[
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
      ]
}
